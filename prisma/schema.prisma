generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    email String? @unique

    password  String
    role      Role
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Recruiter {
    id String @id @default(auto()) @map("_id") @db.ObjectId

    email String? @unique

    password  String
    role      Role
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum Role {
    candidate
    recruiter
}
